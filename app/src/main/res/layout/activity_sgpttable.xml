<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:orientation="vertical">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_gravity="center"
            android:background="#A18DCD"
            android:gravity="center"
            android:padding="2dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#4D5868CC"
                    android:text="NAME"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#4D5868CC"
                    android:text="OUTPUT"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#4D5868CC"
                    android:text="IDEAL RANGE"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="BILIRUBIN (TOTAL)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1500"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="0.2-1.3"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="BILIRUBIN (UNCONJUGATED)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1501"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="0-1.1"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="BILIRUBIN (CONJUGATED)"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1502"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="0-0.3"

                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="SGOT"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1503"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="14-36"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="SGPT"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1504"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="0-35"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="ALKALINE PHOSPHATASE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1505"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="80-100"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="TOTAL PROTEIN"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1506"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="6.3-8.2"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="ALBUMIN,SERUM"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1507"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="3.5-5"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="GLOBULIN"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1508"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="2.3-3.5"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow android:background="#A18DCD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="A:G"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1509"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#84C0DC"
                    android:gravity="center_horizontal"
                    android:text="1-2.1"
                    android:textStyle="bold" />
            </TableRow>


        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dipoutput"
            android:layout_gravity="center"
            android:gravity="center"></TextView>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <TableRow >

                <TextView
                    android:id="@+id/WBC"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="BILIRUBIN(TOTAL):-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/WBC2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(dementia and heart disease) \n High(jaundice) "
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="12sp"/>
            </TableRow>



            <TableRow >

                <TextView
                    android:id="@+id/RBC"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="BILIRUBIN (UNCONJUGTED):-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/RBC1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(impaired hepatic uptake of bilirubin) \n High(irritation in some areas of the brain)"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="12sp"/>
            </TableRow>

            <TableRow >

                <TextView
                    android:id="@+id/plt1"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="BILIRUBIN(COUGATED):-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/plt2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(usually not a concern) \n High(Inflammation Without Infection)"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="12sp"/>
            </TableRow>

            <TableRow >

                <TextView
                    android:id="@+id/hb"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="SGOT:-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/hb1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low( vitamin B6 deficiency)\n High(organs or muscles could be damaged)"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="12sp"/>
            </TableRow>
            <TableRow >

                <TextView
                    android:id="@+id/pcv"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="PCV:-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/pcv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(blood loss, and failure of bone marrow)\n High(dehydration or abnormal increase[blood])"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="12sp"/>
            </TableRow>
            <TableRow >

                <TextView
                    android:id="@+id/mcv1"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="SGPT:-"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mcv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(vitamin B6 deficiency)\n High(damage or problems related to the liver)"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:textSize="12sp"/>
            </TableRow>
            <TableRow >

                <TextView
                    android:id="@+id/mch"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="ALKALINE PHOSPHATASE"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/mch2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(Headache, breathlessness B12 defeciency)\n High(blockage bile ducts, gallstones, cirrhosis)"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="left" />
            </TableRow>
            <TableRow >

                <TextView
                    android:id="@+id/mchc"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="GLOBULIN:-"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mchc2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(liver or kidney disease)\n High(immune disorders)"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:gravity="left" />
            </TableRow>
            <TableRow >

                <TextView
                    android:id="@+id/rcdw"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="A:G:-"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rcdw2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:text="Low(immune system attacks healthy cells)\n High(Certain types of genetic disorders)"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="left" />
            </TableRow>


        </TableLayout>

    </LinearLayout>

</ScrollView>